<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffee"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.android.businessapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            style="@style/RetroBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal">

            <ImageView
                style="@style/LighterSquareBackground"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:contentDescription="@string/house_icon"
                android:src="@drawable/address" />

            <View
                android:layout_width="@dimen/viewWidth"
                android:layout_height="match_parent" />

            <TextView
                style="@style/LighterRectangleBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/address" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingSmall"
            android:orientation="horizontal">

            <ImageView
                style="@style/LighterSquareBackground"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:contentDescription="@string/clock_icon"
                android:src="@drawable/clock" />

            <View
                android:layout_width="@dimen/viewWidth"
                android:layout_height="match_parent" />

            <TextView
                style="@style/LighterRectangleBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hours" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingSmall"
            android:orientation="horizontal">

            <ImageView
                style="@style/LighterSquareBackground"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:contentDescription="@string/phone_icon"
                android:src="@drawable/telephone" />

            <View
                android:layout_width="@dimen/viewWidth"
                android:layout_height="match_parent" />

            <TextView
                style="@style/LighterRectangleBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/number" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>